<?xml version="1.0" encoding="UTF-8" ?>
<!-- 3D Avatars, Pierre Walch -->

<avatarsConfig>

    <graphics>
        <window console="true" width="800" height="600" font="fonts/guiFont.png"
            bgColorA="255" bgColorR="0" bgColorG="0" bgColorB="0"
            guiColorA="255" guiColorR="255" guiColorG="255" guiColorB="255" />
    </graphics>
    
    <input>
        <tracking frameNumber="1500" frameRate="60" current="700" players="tracking/tracking_players.txt" ball="tracking/tracking_ball.txt" jerseys="tracking/jersey.id" />
        <teams redNormal="3" blueNormal="2" redSpecial="11" blueSpecial="5" />
        
        <transformation scaleX="-0,03978" scaleY="0,04080" scaleZ="0,04"
                        offsetX="1148" offsetY="-57,46" offsetZ="0" />
    </input>

    <output>
        <video name="3DAvatars.avi" start="600" end="900" />
    </output>

    <camera speed="20" file="tracking/tracking_camera.txt" fov="1,02" />
    <!-- fov = 2*arctan(h / (2*f)) where h is the film gauge of the camera in millimeters (most used is 35 mm, corresponding to FOV = 0.69 rad). Our
    camera has sensor size 4.86*3.62 mm, which leads to horizontal FOV = 1.02 rad -->
    <!-- top-left corner of court (6100, 4300) -->
    <!-- cam0 pos x="-13930" y="5210" z="5530" x="10,00" y="270,00" z="0,00" -->
    <!-- cam1 pos x="37900"  y="5170"  z="5690" rot x="10,00" y="90,00" z="0,00" -->
    <!-- cam2 pos x="11960"  y="21290" z="5780" rot x="30,00" y="180,00" z="0,00" -->

    <avatars>
    	<scene irrscene="volleyball.irr" scale="1" />

        <actions>
            <stand begin="0" end="0" />
            <walk begin="0" end="15" threshold="250" />
            <run begin="16" end="33" threshold="1800" />
        </actions>

        <players framerate="15" model="models/athlete/athlete.x" scale="0,04"
            textureSizeX="2048" textureSizeY="2048" >
            <redNormal texture="models/athlete/athleteBrazilNormal.png" />
            <blueNormal texture="models/athlete/athleteRussiaNormal.png" />
            <redSpecial texture="models/athlete/athleteBrazilSpecial.png" />
            <blueSpecial texture="models/athlete/athleteRussiaSpecial.png" />
        </players>

        <jerseys font="fonts/jerseyFont.xml"
            rectLeft="1138" rectTop="947"
            rectRight="1520" rectBottom="1365"
            colorA="255" colorR="48" colorG="144" colorB="255" />

        <ball model="models/ball/Volleyball_blue.obj" texture="none" scale="1,8" />

        <trajectories visible="true" colorA="255" colorR="229" colorG="255" colorB="0" />
    </avatars>

</avatarsConfig>
